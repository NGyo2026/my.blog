---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import TagList from '../../components/TagList.astro';
import { getCategoryCounts, getTagCounts, sortPostsByDate } from '../../utils/blog';
import { slugify } from '../../utils/slugify';

const posts = sortPostsByDate(
	await getCollection('blog', ({ data }) => !data.draft)
);
const tagCounts = getTagCounts(posts);
const categoryCounts = getCategoryCounts(posts);
---

<Layout title="블로그" description="모든 글을 태그와 카테고리로 정리합니다.">
	<section class="container">
		<h1>블로그</h1>
		<p class="lead">
			모든 글은 마크다운으로 작성되며 월별·태그·카테고리로 정리됩니다.
		</p>
	</section>

	<section class="container split">
		<div class="stack">
			<h2 class="section-title">전체 글</h2>
			<div class="grid">
				{posts.map((post) => (
					<PostCard post={post} />
				))}
			</div>
		</div>
		<aside class="sidebar">
			<div class="card panel">
				<h3>태그</h3>
				<div class="pill-list">
					{Object.entries(tagCounts).map(([tag, count]) => (
						<a class="pill" href={`/blog/tags/${slugify(tag)}`}>
							{tag} <span>{count}</span>
						</a>
					))}
				</div>
			</div>
			<div class="card panel">
				<h3>카테고리</h3>
				<div class="pill-list">
					{Object.entries(categoryCounts).map(([category, count]) => (
						<a class="pill" href={`/blog/categories/${slugify(category)}`}>
							{category} <span>{count}</span>
						</a>
					))}
				</div>
			</div>
			<div class="card panel">
				<h3>둘러보기</h3>
				<TagList items={Object.keys(tagCounts)} basePath="/blog/tags" />
				<TagList items={Object.keys(categoryCounts)} basePath="/blog/categories" />
				<a class="archive-link" href="/blog/archive">월별 아카이브 →</a>
			</div>
		</aside>
	</section>
</Layout>

<style>
	.lead {
		color: var(--fg-muted);
		max-width: 640px;
	}

	.split {
		display: grid;
		grid-template-columns: minmax(0, 2fr) minmax(0, 1fr);
		gap: 28px;
		margin-top: 24px;
	}

	.stack {
		display: grid;
		gap: 20px;
	}

	.grid {
		display: grid;
		gap: 18px;
	}

	.sidebar {
		display: grid;
		gap: 18px;
	}

	.panel {
		padding: 20px;
		display: grid;
		gap: 12px;
	}

	.pill-list {
		display: flex;
		flex-direction: column;
		gap: 8px;
	}

	.pill {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 8px 12px;
		border-radius: 10px;
		border: 1px solid var(--border);
	}

	.pill span {
		color: var(--fg-muted);
		font-size: 0.85rem;
	}

	.archive-link {
		margin-top: 8px;
		color: var(--accent);
		font-weight: 600;
	}

	@media (max-width: 960px) {
		.split {
			grid-template-columns: 1fr;
		}
	}
</style>
