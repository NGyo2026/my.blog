---
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import blogFavicon from '../../blogfavicon.png';

const { title = '내 블로그', description = '정적이고 읽기 편한 블로그.' } = Astro.props;
const pageTitle = title ? `${title} | 내 블로그` : '내 블로그';
---

<!doctype html>
<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/png" href={`${blogFavicon}?v=20260129`} />
		<link rel="shortcut icon" type="image/png" href={`${blogFavicon}?v=20260129`} />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<div class="page">
			<SiteHeader />
			<main class="main">
				<slot />
			</main>
			<SiteFooter />
		</div>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
		--bg: #0b0f14;
		--bg-soft: #121823;
		--fg: #e6edf3;
		--fg-muted: #9fb1c3;
		--card: #151c27;
		--accent: #7aa2ff;
		--accent-strong: #9ab7ff;
		--border: #223042;
		--shadow: rgba(3, 7, 18, 0.45);
		--radius: 18px;
		--max-width: 1080px;
		--font-sans: "Noto Sans KR", "Apple SD Gothic Neo", "Segoe UI", system-ui, sans-serif;
	}

	@media (prefers-color-scheme: light) {
		:root {
			--bg: #f6f7fb;
			--bg-soft: #ffffff;
			--fg: #0f172a;
			--fg-muted: #4b5563;
			--card: #ffffff;
			--accent: #3056d3;
			--accent-strong: #1d3fb8;
			--border: #e2e8f0;
			--shadow: rgba(148, 163, 184, 0.35);
		}
	}

	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		min-height: 100%;
		font-family: var(--font-sans);
		background: var(--bg);
		color: var(--fg);
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	.page {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.main {
		flex: 1;
		padding: 0 24px 64px;
	}

	.container {
		max-width: var(--max-width);
		margin: 0 auto;
	}

	.card {
		background: var(--card);
		border: 1px solid var(--border);
		border-radius: var(--radius);
		box-shadow: 0 18px 40px var(--shadow);
	}

	.section-title {
		font-size: 1.1rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--fg-muted);
		margin: 0 0 16px;
	}

	.prose {
		line-height: 1.85;
		font-size: 1.02rem;
		color: var(--fg);
	}

	.prose h1,
	.prose h2,
	.prose h3 {
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	.prose a {
		color: var(--accent);
		text-decoration: underline;
		text-decoration-thickness: 2px;
		text-underline-offset: 4px;
	}

	.prose pre {
		background: #0f172a;
		padding: 20px;
		border-radius: 14px;
		overflow: auto;
	}

	.prose code {
		font-family: "Cascadia Code", "Fira Code", monospace;
		font-size: 0.95rem;
	}

	.prose blockquote {
		margin: 1.5rem 0;
		padding: 1rem 1.25rem;
		border-left: 4px solid var(--accent);
		background: color-mix(in srgb, var(--accent) 12%, transparent);
		border-radius: 12px;
	}
</style>
